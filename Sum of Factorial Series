#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int factorial(int n) {
    int factorial=1;
    for (int i=1;i<=n;i++) {
        factorial*=i;
    }
    return factorial;
}
int sumFactorial(int n) {
    int sum=0;
    for (int i=1;i<=n;i++) {
        sum+=factorial(i);
    }
    return sum;
}
int main() {
    int n,result;
    scanf("%d",&n);
    result=sumFactorial(n);
    printf("%d",result);
    return 0;
}
