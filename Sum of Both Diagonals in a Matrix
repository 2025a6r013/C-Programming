#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d",&n);
    int arr[n][n];
    long long primarysum=0,secondarysum=0;
    for (int i=0;i<n;i++){
        for (int j=0;j<n;j++){
            scanf("%d",&arr[i][j]);
            if (i==j){
                primarysum+=arr[i][j];
            }
            if (i+j==n-1){
                secondarysum+=arr[i][j];
            }
        }
    }
    long long total=primarysum+secondarysum;
    if (n%2==1){
        total-=arr[n/2][n/2];
    }
    printf("Sum of Primary Diagonal: %lld\n",primarysum);
    printf("Sum of Secondary Diagonal: %lld\n",secondarysum);
    printf("Total Sum of Both Diagonals: %lld\n",total);
    return 0;
}
